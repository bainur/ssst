<%= content_for :breadcrumb do %>
<%= link_to 'Add Movie', new_admin_movie_path, class: "btn btn-block btn-outline-success btn-sm" %>
<% end %>
<div class="row">
  <div class="col-12">
    <div class="card">
      <!-- /.card-header -->
      <div class="card-body table-responsive p-0">
        <table class="table table-hover text-nowrap">
          <thead>
            <tr>
              <th>#No</th>
              <th>Name</th>
              <th>Year</th>
              <th>Director</th>
              <th>Main Star</th>
              <th>Description</th>
              <th>favorited</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @movies.each_with_index do |movie, index| %>
            <tr>
              <td><%= movie.name %></td>
              <td><%= movie.year %></td>
              <td><%= movie.director %></td>
              <td><%= movie.main_star %></td>
              <td><%= movie.description %></td>
              <td><%= movie.favorited %></td>
              <td><%= link_to 'Show', admin_movie_path(movie), class: "btn btn-outline-primary btn-xs" %></td>
              <td><%= link_to 'Edit', edit_admin_movie_path(movie), class: "btn btn-outline-warning btn-xs" %></td>
              <td><%= link_to 'Delete', admin_movie_path(movie),  method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
            <% end %>
          </tbody>
        </table>

      </div>
      <div class="card-footer clearfix">
        <%= will_paginate @movies %>
      </div>
      <!-- /.card-body -->
    </div>
    <!-- /.card -->
  </div>
</div>