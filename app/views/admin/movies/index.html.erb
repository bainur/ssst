<%= content_for :breadcrumb do %>
<%= link_to 'Add Movie', new_admin_movie_path, class: "btn btn-block btn-outline-success btn-sm" %>
<% end %>
<div class="row">
  <div class="col-12">
    <div class="card">
      <!-- /.card-header -->
      <div class="card-body table-responsive p-0">
        <table class="table table-hover text-nowrap">
          <thead>
            <tr>
              <th>Name</th>
              <th>Year</th>
              <th>Favorited</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @movies.each_with_index do |movie, index| %>
            <tr>
              <td><%= link_to movie.name, edit_admin_movie_path(movie) %></td>
              <td><%= movie.year %></td>
              <td><%= movie.favorited > 0 ? pluralize(movie.favorited, "Time") : "0" %> Favorited </td>
              <td><%= link_to 'Delete', admin_movie_path(movie),  method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
            <% end %>
          </tbody>
        </table>

      </div>
      <div class="card-footer clearfix">
        <%= will_paginate @movies %>
      </div>
      <!-- /.card-body -->
    </div>
    <!-- /.card -->
  </div>
</div>